@model IEnumerable<FitnessCenterApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2 class="mb-3">Hizmetler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Yeni Hizmet Ekle</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Hizmet Adı</th>
            <th>Kategori</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Spor Salonu</th>
            <th style="width:210px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Category</td>
            <td>@item.DurationMinutes</td>
            <td>@item.Price.ToString("0.00")</td>
            <td>@item.Gym?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detay</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
